 xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">
 <!-- https://www.tropo.com/docs/scripting/advanced-speech-control/grammar -->

  <rule id="orderTaxiRule"> <!-- Poproszę <taxi> na adres <ulica> <numer> (w dniu <data>)* na godzinę <godizna> dla <liczba> pasażerów -->
    
	  <item repeat="0-1"> Poproszę </item>
      <item repeat="0-1">
        <ruleref uri="#taxi" />
      </item>
    
      <item repeat="0-1"> na adres </item>
    <!-- TODO street from DB? -->
      <item repeat="0-1">
				<ruleref uri="#address" />   
				<tag> out.address=rules.latest(); </tag>
      </item>
	  <item repeat="0-1"> <!-- address number -->
		  <ruleref uri="#number" />   
		  <tag> out.anum = rules.latest(); </tag>
	  </item>

    <item repeat="0-1">	<!-- date = dziś/ jutro / konkretna -->
      <one-of>
        <item>
          <one-of>
            <item>  dziś      <tag> out.date = "0"; </tag>   </item>
            <item>  jutro     <tag> out.date = "+1"; </tag>   </item>
            <item>  pojutrze  <tag> out.date = "+2"; </tag>   </item>
          </one-of>
        </item>
        <item>
          <ruleref uri="#date" />
          <tag> out.date = rules.latest(); </tag>
        </item>
      </one-of>
      
	  </item>

    <item repeat="0-1"> na godzinę </item>
    <item repeat="0-1"> o godzinie </item>
    <item repeat="0-1">	<!-- time -->
		  <ruleref uri="#hour" />    
		  <tag> out.hour = rules.latest(); </tag>
		  <ruleref uri="#number" />    
		  <tag> out.minute = rules.latest(); </tag>		
	  </item>
	
	
	  <item repeat="0-1"> dla </item> 
	  <item repeat="0-1"> na </item>  
	  <item repeat="0-1"> <!-- passangers -->
		  <ruleref uri="#passangers" />    
		  <tag> out.passangers=rules.latest(); </tag>
	  </item>
	  <item repeat="0-1"> osoby </item> 
	  <item repeat="0-1"> osób </item>


    <item repeat="0-1"> telefon </item>
    <item repeat="0-1"> numer telefonu </item>
    <item repeat="0-1"> <!--  phone -->
      <ruleref uri="#phone" />
      <tag> out.phone=rules.latest(); </tag>
    </item>

    <!-- TODO name -->
    <item repeat="0-1">
      <ruleref uri="#name" />
      <tag> out.name=rules.latest(); </tag>
    </item>
  
  </rule>  
    

